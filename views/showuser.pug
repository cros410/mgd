extends ./base/baseadmin
block vars
    - var tittle = "Login"
block body
  .container.pad_50
    .col-md-6
        .form-group.has-feedback
          label.form-control-label Nombre
          input.form-control.form-control-danger(type='text', name="nombre", value=usuario.nombre , disabled)
        .form-group.has-feedback
          label.form-control-label DNI / RUC
          input.form-control.form-control-danger(type='text', name="dni", value=usuario.dni , disabled )
        .form-group.has-feedback
          label.form-control-label Dirección
          input.form-control.form-control-danger(type='text',  name="direc" , value=usuario.direc , disabled)
        .form-group.has-feedback
          label.form-control-label Distrito
          input.form-control.form-control-danger(type='text' , name="distrito" , value=usuario.distrito , disabled)
        .form-group.has-feedback
          label.form-control-label Celular
          input.form-control.form-control-danger(type='text', name="celular" , value=usuario.celular , disabled)
        .form-group.has-feedback
          label.form-control-label Teléfono
          input.form-control.form-control-danger(type='text', name="telefono" , value=usuario.telefono , disabled)
        .form-group.has-feedback
          label.form-control-label Correo
          input.form-control.form-control-danger(type='email',  name="correo" , value=usuario.correo , disabled)
          .help-block.with-errors
        .form-group.has-feedback
          label.form-control-label Plan
          input.form-control.form-control-danger(type='text', name="plan" , value=usuario.plan , disabled )
        .form-group.has-feedback
          label.form-control-label Megas
          input.form-control.form-control-danger(type='text' , name="megas", value=usuario.megas , disabled)
        .form-group
          label.form-control-label Estado
          if(usuario.onair==1)
            .radio
            label
              input(type='radio', name='onair', value="1" checked="checked")
              |                             Activo
          else
            .radio
            label
              input(type='radio', name='onair', value="0" checked="checked")
              |                             No activo
          
          
        
